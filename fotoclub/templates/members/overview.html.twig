{% extends 'base.html.twig' %}

{% block title %}Leden | Fotoclub Uitgeest{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
            {% include 'members/_leftNav.html.twig' with {'members': members} %}
        </div>
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <article class="galerijUitgelicht">
                <h3>Galerij Uitgelicht</h3>
                <div class="row galerij">
                    {% for image in gallery.images %}
                        {% if loop.index <= 4 %}
                            <div class="col-xs-3">
                                <a class="text-right" href="{{ asset('/assets/images/original/' ~ image.filename) | imagine_filter('gallery_full') }}"  data-lightbox="Galerij Uitgelicht">
                                    <img class="img-responsive center-block" src="{{ asset('/assets/images/original/' ~ image.filename) | imagine_filter('gallery_thumb') }}">
                                </a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="row">
                    <div class="col-xs-6 viewGallery pull-right">
                        <a class="text-right" href="" title="Bekijk de galerij">
                            <span>Bekijk de hele galerij hier &raquo;</span>
                        </a>
                    </div>
                </div>
                <header>
                    <h1>{{ gallery.name }}</h1>
                </header>
                <section>
                    <dl class="dl-horizontal">
                        <dt>Auteur:</dt>
                        <dd>
                            <a class="author" href="" rel="author">{{ gallery.member.name }}</a>
                        </dd>
                        <dt>Beschrijving:</dt>
                        <dd>
                            {{ gallery.description|raw }}
                        </dd>
                    </dl>
                </section>
            </article>
        </div>
    </div>
{% endblock %}