{% extends 'base.html.twig' %}

{% block title %}Hello MigrateDataController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div style="background: white">
        <h3>{{ notSavedImagesToCompetition | length }} afbeeldingen niet opgeslagen bij competities:</h3>
        {% for gallery in notSavedImagesToCompetition %}
            <div>
                <p>Competitie: {{ gallery.competition.name }}</p>
                <p>Afbeelding: {{ gallery.image.name }}</p>
                <hr style="border: 3px solid green"/>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
